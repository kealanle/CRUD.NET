@model CRUDweb.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Cliente</h1>

<hr />

<div asp-validation-summary="All"></div>
<br /><br />
<div class="row">
    <div class="col-md-4">
        <div class="border-bottom p-3 mt-4">
        <form method="post" asp-action="DeletePOST">
            <input asp-for="Id" hidden />
            <div asp-validatio n-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" disabled   class="form-control" />
               
            </div>
       
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                  <a asp-controller="Cliente" asp-action="Index" class=" btn btn-secondary">
                     Ver Clientes
                  </a>
            </div>
        </form>
        </div>
    </div>
</div>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial"/>
}
}
   