@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary"> Lista de Clientes </h2>
       </div>
       <div class="col-6 text-end">
           <a asp-controller="Cliente" asp-action="Create" class="btn-primary" >
               <i class="bi bi-plus-square"></i> &nbsp; Añadir Nuevo Cliente
           </a>
       </div>
    </div>
    <br /><br />



<table class="table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID Cliente
            </th>
            <th>
                Nombre
            </th>
            <th></th>
          
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr class="table-primary">
                <td width="30%">
                    @obj.Id
                </td>
                 <td width="70%">
                    @obj.Nombre
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id=@obj.Id
                    class="btn-primary btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id=@obj.Id
                    class="btn-primary btn-danger  mx-2"><i class="bi bi-trash-fill"></i> Borrar</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>