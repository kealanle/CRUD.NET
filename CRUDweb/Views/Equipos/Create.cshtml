@model CRUDweb.Models.Equipo


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimaInspeccion" class="control-label"></label>
                <input asp-for="UltimaInspeccion" class="form-control" />
                <span asp-validation-for="UltimaInspeccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantaID" class="control-label"></label>
                <select asp-for="PlantaID" class ="form-control" asp-items="@(new SelectList(ViewBag.ListofPlantas,"Value", "Text"))">
                   
                </select>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Equipos</a>
</div>

